{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES6",
      "strict": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "removeComments": true,
      "outDir": "./dist"
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  